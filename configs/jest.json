{
  "rootDir": "..",
  "roots": ["<rootDir>/src"],
  "testEnvironment": "jsdom",
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.{ts,tsx}",
    "!<rootDir>/src/main/**/*",
    "!<rootDir>/src/**/index.ts",
    "!**/*.d.ts"
  ],
  "setupFiles": ["<rootDir>/src/main/config/jest-setup.js"],
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/main/config/file-mock.js",
    "\\.(css)$": "<rootDir>/src/main/config/style-mock.js"
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
  "transformIgnorePatterns": ["/node_modules/"],
  "moduleDirectories": ["node_modules"],
  "globals": {
    "DEVELOPMENT": true,
    "FAKE_SERVER": false
  }
}
